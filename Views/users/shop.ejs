        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

        .pagination a {
            display: inline-block;
            padding: 10px 15px;
            margin: 0 5px;
            border: 1px solid #6e3bbb;
            color: #3e0a77;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .pagination a.active {
            background-color: #6e3bbb;
            color: #fff;
        }

        .pagination a:hover {
            background-color: #3e0a77;
            color: #fff;
        }

        button {
            background-color: #6e3bbb;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #3e0a77;
        }

        #price-slider {
            width: 100%;
            background-color: #d0b4ff;
            height: 6px;
            border-radius: 3px;
            position: relative;
            margin: 15px 0;
        }

        #price-slider::before {
            content: '';
            width: 40%;
            height: 100%;
            background-color: #6e3bbb;
            position: absolute;
            border-radius: 3px;
        }

        @media (max-width: 768px) {
            .shop-container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                border-right: none;
                border-bottom: 2px solid #d0b4ff;
            }

            .products {
                grid-template-columns: 1fr;
            }
        }

        .discount-badge {
            position: absolute;
            top: -10px;
            right: -10px;
            background-color: rgb(44, 33, 145);
            /* Bright red color */
            color: rgb(255, 8, 8);
            padding: 8px 12px;
