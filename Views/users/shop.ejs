            padding: 0;
        }

        .p-name {
            font-weight: 600;
            font-size: 2rem;
        }

        .add-to-favorites.in-wishlist i {
            color: red;
            /* Change the icon color for items already in the wishlist */
        }

        .discount-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #c8aae9;
            /* Deep purple */
