            <script>
                // dashboard.js

// Format currency in Indian Rupees
const formatCurrency = (value) => {
    return '₹' + value.toLocaleString('en-IN', {
        maximumFractionDigits: 2,
        minimumFractionDigits: 2
    });
};

// Initialize Brand Sales Pie Chart
function initializeBrandSalesChart(brandData) {
    const ctx = document.getElementById('brandSalesChart').getContext('2d');
    const brandNames = brandData.map(brand => brand.brandName);
    const salesData = brandData.map(brand => brand.totalSales);
    
    const colors = brandNames.map((_, index) => 
        `hsl(${(index * 360) / brandNames.length}, 70%, 60%)`
    );

    return new Chart(ctx, {
        type: 'pie',
        data: {
            labels: brandNames,
            datasets: [{
                data: salesData,
                backgroundColor: colors,
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { 
                    position: 'right',
                    labels: {
                        padding: 20
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const value = context.raw;
                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                            const percentage = ((value / total) * 100).toFixed(1);
                            return `${context.label}: ${formatCurrency(value)} (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });
}

// Initialize Admin Dashboard Line Chart
function initializeAdminChart(orderStats) {
    const ctx = document.getElementById('adminChart').getContext('2d');
    
    // Prepare initial data
    const labels = ['Completed', 'Active', 'Cancelled', 'Returned'];
    const data = [
        orderStats.completed,
        orderStats.active,
        orderStats.cancelled,
        orderStats.returned
    ];

    return new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Orders',
                data: data,
                backgroundColor: [
                    'rgba(75, 192, 192, 0.6)',  // Completed
                    'rgba(54, 162, 235, 0.6)',  // Active
                    'rgba(255, 99, 132, 0.6)',  // Cancelled
                    'rgba(255, 206, 86, 0.6)'   // Returned
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Number of Orders'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const label = context.dataset.label || '';
                            const value = context.raw;
                            return `${label}: ${value}`;
                        }
                    }
                }
            }
        }
    });
}

// Initialize everything when the DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
    // Check if dashboard data exists
    if (window.dashboardData) {
        // Initialize brand sales chart
        if (window.dashboardData.topBrands) {
            initializeBrandSalesChart(window.dashboardData.topBrands);
        }

        // Initialize admin chart with order statistics
        if (window.dashboardData.orderStats) {
            initializeAdminChart(window.dashboardData.orderStats);
        }
    } else {
        console.error('Dashboard data not found');
    }
});
