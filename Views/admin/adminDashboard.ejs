        <script>
            // Parse the `topBrands` data from the backend
            const brandData = JSON.parse('<%- JSON.stringify(topBrands) %>');
        
            // Extracting data for the pie chart
            const brandNames = brandData.map(brand => brand.brandName);
            const salesData = brandData.map(brand => brand.totalSales);
        
            // Generate dynamic colors
            const generateColors = count => {
                const colors = [];
                for (let i = 0; i < count; i++) {
                    colors.push(`hsl(${(i * 360) / count}, 70%, 60%)`);
                }
                return colors;
            };
            const colors = generateColors(brandData.length);
        
            const ctx = document.getElementById('brandSalesChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: brandNames,
                    datasets: [{
                        data: salesData,
                        backgroundColor: colors,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'right' },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    const value = context.raw;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return `${context.label}: ₹${value.toLocaleString()} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        </script>
        

        <script>
            // Initialize the chart
            const ctx = document.getElementById('adminChart').getContext('2d');
            let adminChart;

            // Function to update chart data
            async function updateChart(timeFilter) {
                try {
                    const response = await fetch(`/api/dashboard-data?filter=${timeFilter}`);
                    const data = await response.json();

                    if (adminChart) {
                        adminChart.destroy();
                    }

                    adminChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.labels,
                            datasets: [
                                {
                                    label: 'Sales',
                                    data: data.sales,
                                    borderColor: 'rgb(75, 192, 192)',
                                    tension: 0.1
                                },
                                {
                                    label: 'Orders',
                                    data: data.orders,
                                    borderColor: 'rgb(153, 102, 255)',
                                    tension: 0.1
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                } catch (error) {
                    console.error('Error fetching data:', error);
                }
            }

            // Event listener for filter changes
            document.getElementById('timeFilter').addEventListener('change', (e) => {
                updateChart(e.target.value);
            });

            // Initial load
            updateChart('monthly');
        </script>

        <script>
            function updateClock() {
                const now = new Date();
                const time = now.toLocaleTimeString('en-US', {
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit',
                    hour12: true
                });
                document.getElementById('clock').textContent = time;
            }

            updateClock();
            setInterval(updateClock, 1000);
        </script>


