<%- include('../layouts/admin/header.ejs') %>
<div class="d-flex">
    <!-- Sidebar -->
        <%- include('../layouts/admin/sidebar.ejs', { currentPage: 'orderList' }) %>

    <!-- Main Content -->
    <div class="flex-grow-1" style="margin-left: 17rem;">
        <div class="content bg-light py-3">
            <div class="container-fluid" >
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                        <h3>Order List</h3>
                        <div class="form-inline">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Filter by Status
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/admin/orderList?status=">All</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Pending">Pending</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Processing">Processing</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Shipped">Shipped</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Delivered">Delivered</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Cancelled">Cancelled</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Return%20Request">Return Request</a>
                                <a class="dropdown-item" href="/admin/orderList?status=Returned">Returned</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped text-center">
                            <thead class="thead-light">
                                <tr>
                                    <th>#</th>
                                    <th>ID</th>
                                    <th>Customer Name</th>
                                    <th>Order Date</th>
                                    <th>Product Name</th>
                                    <th>Status</th>
                                    <th>Address</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders && orders.length > 0) { %>
                                    <% orders.forEach((order, index) => { %>
                                        <tr>
                                            <td><%= (page - 1) * itemsPerPage + index + 1 %></td>
                                            <td><%= order._id %></td>
                                            <td><%= order.user.name %></td>
                                            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                            <td><%= order.orderedItems.map(item => item.product.productName).join(', ') %></td>
                                            <td class="status-<%= order.status.toLowerCase().replace(/\s+/g, '-') %>">
                                                <%= order.status %>
                                                <form action="/admin/orderList/updateStatus" method="POST" class="d-inline">
                                                    <input type="hidden" name="orderId" value="<%= order._id %>">
                                                    <select name="updatedStatus" class="form-control form-control-sm d-inline" style="width: auto;" onchange="this.form.submit()">
                                                        <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                        <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                        <option value="Return Request" <%= order.status === 'Return Request' ? 'selected' : '' %>>Return Request</option>
                                                        <option value="Returned" <%= order.status === 'Returned' ? 'selected' : '' %>>Returned</option>
                                                        <option value="Refund Completed" <%= order.status === 'Refund Completed' ? 'selected' : '' %>>Refund Completed</option>
                                                    </select>
                                                </form>
                                            </td>
                                            <td>
                                                <%= order.address.name %>, <%= order.address.addressType %>, <%= order.address.landMark %>,
                                                <%= order.address.city %>, <%= order.address.state %>, <%= order.address.pincode %>,
                                                Phone: <%= order.address.phone %>, Alt Phone: <%= order.address.alterPhone %>
                                            </td>
                                            <td>
                                                <a href="/admin/orderList/viewOrder/<%= order._id %>" class="btn btn-primary btn-sm">View</a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center">No orders found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <ul class="pagination justify-content-center mb-0">
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layouts/admin/footer.ejs') %>

            
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const selectElements = document.querySelectorAll('select[name="updatedStatus"]');

        selectElements.forEach(selectElement => {
            selectElement.addEventListener('change', function () {
                const form = selectElement.closest('form');
                const orderId = form.querySelector('input[name="orderId"]').value;
                const updatedStatus = selectElement.value;

                Swal.fire({
                    title: 'Updating...',
                    text: 'Please wait while the status is updated.',
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                fetch('/admin/orderList/updateStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        orderId: orderId,
                        updatedStatus: updatedStatus
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        Swal.close();

                        if (data.message) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Status Updated',
                                text: `Order #${orderId} status has been updated to ${updatedStatus}.`
                            });

                            const statusCell = form.closest('td');
                            statusCell.className = `status-${updatedStatus.toLowerCase().replace(/\s+/g, '-')}`;
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Update Failed',
                                text: data.message || 'An unknown error occurred.'
                            });
                        }
                    })
                    .catch(error => {
                        Swal.close();

                        console.error(error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Update Failed',
                            text: 'An error occurred while updating the status. Please try again.'
                        });
                    });
            });
        });
    });
</script>
