        <div class="content">
            <div class="container-fluid p-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h3>Order List</h3>
                                <div class="form-inline"> <input class="form-control mr-sm-2" type="search"
                                        placeholder="Search" aria-label="Search"> <button
                                        class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                                </div>
                                <div class="dropdown"> <button class="btn btn-secondary dropdown-toggle" type="button"
                                        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false"> Filter by Status </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton"> <a
                                            class="dropdown-item" href="/admin/orderList?status=">All</a> <a
                                            class="dropdown-item" href="/admin/orderList?status=Pending">Pending</a> <a
                                            class="dropdown-item"
                                            href="/admin/orderList?status=Processing">Processing</a> <a
                                            class="dropdown-item" href="/admin/orderList?status=Shipped">Shipped</a> <a
                                            class="dropdown-item" href="/admin/orderList?status=Delivered">Delivered</a>
                                        <a class="dropdown-item" href="/admin/orderList?status=Cancelled">Cancelled</a>
                                        <a class="dropdown-item" href="/admin/orderList?status=Return%20Request">Return
                                            Request</a> <a class="dropdown-item"
                                            href="/admin/orderList?status=Returned">Returned</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>ID</th>
                                            <th>Customer Name</th>
                                            <th>Order Date</th>
                                            <th>Product Name</th>
                                            <th>Status</th>
                                            <th>Address</th>
                                            <th>View</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (orders && orders.length> 0) { %>
                                            <% orders.forEach(order=> { %>
                                                <tr>
                                                    <td><%=(currentPage-1)* itemsPerPage + orders.indexOf(order)+1 %>
                                                    </td>
                                                    <td><%= order._id %></td>
                                                    <td><%= order.user.name %></td>
                                                    <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                                    <td><%= order.orderedItems.map(item=>
                                                            item.product.productName).join(', ') %></td>
                                                    <td
                                                        class="status-<%= order.status.toLowerCase().replace(/\s+/g, '-') %>">
                                                        <%= order.status %>
                                                            <form action="/admin/orderList/updateStatus" method="POST"
                                                                style="display:inline;">
                                                                <input type="hidden" name="orderId" value="<%= order._id %>"> 
                                                                <select name="updatedStatus" onchange="this.form.submit()">
                                                                    <option value="Pending" <%=order.status==='Pending' ? 'selected' : '' %>>Pending</option>
                                                                    <option value="Processing" <%=order.status==='Processing' ? 'selected' : '' %>>Processing</option>
                                                                    <option value="Shipped" <%=order.status==='Shipped' ? 'selected' : '' %>>Shipped</option>
                                                                    <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>>Delivered</option>
                                                                    <option value="Cancelled" <%=order.status==='Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                                    <option value="Return Request" <%=order.status==='Return Request' ? 'selected' : '' %>>Return Request</option>
                                                                    <option value="Returned" <%=order.status==='Returned' ? 'selected' : '' %>>Returned</option>
                                                                    <option value="Refund Completed" <%=order.status==='Refund Completed' ? 'selected' : '' %>>Refund Completed</option>
                                                                </select>
                                                            </form>
                                                        </td>
                                                        <td>
                                                            <%= order.address.name %>, 
                                                            <%= order.address.addressType %>, 
                                                            <%= order.address.landMark %>, 
                                                            <%= order.address.city %>, 
                                                            <%= order.address.state %>, 
                                                            <%= order.address.pincode %>, 
                                                            Phone: <%= order.address.phone %>, 
                                                            Alt Phone: <%= order.address.alterPhone %>
                                                        </td>
                                                    <td>
                                                        <a href="/admin/orderList/viewOrder/<%= order._id %>"
                                                            class="btn btn-primary">View
                                                        </a>
                                                    </td>

                                                </tr>
                                                <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="7">No orders found</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>

                            <div class="pagination-container mt-3">
                                <ul class="pagination justify-content-center">
                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= (currentPage === i) ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

