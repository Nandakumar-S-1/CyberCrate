<%- include('../layouts/admin/header.ejs') %>
<%- include('../layouts/admin/sidebar.ejs', {currentPage: 'users'}) %>

<div class="users-container">
    <div class="users-header bg-primary text-white p-3 rounded shadow">
        <h2 class="mb-0">Users</h2>
    </div>

    <div class="users-table mt-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < data.length; i++) { %>
                <tr data-user-id="<%= data[i]._id %>">
                    <td><%= i + 1 %></td>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].email %></td>
                    <td>
                        <% if (!data[i].isBlocked) { %>
                            <button class="btn btn-outline-danger block-btn">
                                Block
                            </button>
                        <% } else { %>
                            <button class="btn btn-outline-success unblock-btn">
                                Unblock
                            </button>
                        <% } %>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <div class="pagination-container mt-3">
        <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (currentPage === i) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<style>
    /* Users Container */
    .users-container {
        padding: 2rem;
        background-color: #f8f9fa;
        min-height: 100vh;
        margin-left: 260px;
    }

    /* Table Styles */
    table {
        width: 100%;
    }

    /* Pagination Styles */
    .pagination-container {
        margin-top: 2rem;
    }

    .pagination .page-link {
        color: #007bff;
    }

    .pagination .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .users-header {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }

        .users-table {
            overflow-x: auto;
        }

        table {
            min-width: 600px;
        }

        .pagination {
            flex-wrap: wrap;
        }
    }
</style>

<%- include('../layouts/admin/footer.ejs') %>



<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle block buttons
        document.querySelectorAll('.block-btn').forEach(button => {
            button.addEventListener('click', function() {
                const userId = this.closest('tr').getAttribute('data-user-id');
                window.location.href = `/admin/blockCustomer?id=${userId}`;
            });
        });

        // Handle unblock buttons
        document.querySelectorAll('.unblock-btn').forEach(button => {
            button.addEventListener('click', function() {
                const userId = this.closest('tr').getAttribute('data-user-id');
                window.location.href = `/admin/unBlockCustomer?id=${userId}`;
            });
        });
    });
</script>
