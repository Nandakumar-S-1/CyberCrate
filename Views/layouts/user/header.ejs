    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>

<style>
    .header {
    background: #1a0340;
    border-bottom: 1px solid #2d0668;
}

.logo img {
    height: 40px;
    width: auto;
}

/* Navigation styles */
.nav-link {
    color: white !important;
    text-transform: uppercase;
    font-size: 14px;
    padding: 8px 12px !important;
}

.nav-link:hover {
    color: #ff0844 !important;
}

/* Dropdown styles */
.dropdown-menu {
    /* background: #1a0340; */
    border: 1px solid #2d0668;
    padding: 0.5rem 0;
    z-index: 1050;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background: rgba(26, 3, 64, 0.95); /* Slight transparency */
}

.dropdown-item {
    color: white !important;
    padding: 0.5rem 1rem;
}

.dropdown-item:hover {
    background: #2d0668 !important;
    color: #ff0844 !important;
}

.dropdown-divider {
    border-color: #2d0668;
    margin: 0.5rem 0;
}
.dropdown:hover .dropdown-menu,
.dropdown-menu.show {
    display: block !important;
    opacity: 1;
    visibility: visible;
    color: #1a0340;
    background-color: #1b155a;
}

/* Remove dropdown arrows */
.nav-link::after {
    display: none !important;
}

/* Header icons */
.header__icons .nav-link {
    color: white !important;
    text-decoration: none !important;
    padding: 0 !important;
    font-size: 16px;
}

.header__icons .nav-link:hover {
    color: #ff0844 !important;
}

/* Profile dropdown button */
.header__icons .dropdown button {
    font-size: 14px;
    font-weight: normal;
}

.header__icons .dropdown button:hover {
    color: #ff0844 !important;
}

/* Sale banner - Original styles preserved */
.sale-banner {
    position: relative;
    overflow: hidden;
    background-color: black;
    white-space: nowrap;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
}

.sale-banner-content {
    display: inline-block;
    white-space: nowrap;
    background-color: rgb(44, 18, 94);
    animation: scroll-text 15s linear infinite;
}

@keyframes scroll-text {
    from {
        transform: translateX(500%);
    }
    to {
        transform: translateX(-100%);
    }
}

.orange-text { color: orange; }
.sale-text { color: white; }
.green-text { color: green; }

/* Search button */
.btn-primary {
    background-color: #220c5b;
    border-color: #220c5b;
}

.btn-primary:hover {
    background-color: #d19ee4;
    border-color: #d19ee4;
}

/* Mobile responsive adjustments */
@media (max-width: 991.98px) {
    .navbar-collapse {
        background: #1a0340;
        padding: 1rem;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
    }
    
    .header__icons {
        margin-top: 1rem;
        justify-content: center;
    }
}
</style>

<body>




<header class="header">
    <div class="container-fluid">
        <div class="header__content py-2">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark w-100">
                <div class="container-fluid px-0">
                    <!-- Logo -->
                    <a href="/" class="logo navbar-brand text-decoration-none">
                        <img src="/img/cyber.png" alt="CyberCrate" class="d-inline-block align-text-top">
                        <span class="ms-2">
                            <span style="color: #ff0844;">CYBE</span><span style="color: #dd9cdf;">r.c</span><span style="color: lawngreen;">RATE</span>
                        </span>
                    </a>

                    <!-- Mobile Toggle Button -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Collapsible Content -->
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <!-- Navigation Menu -->
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" data-bs-toggle="dropdown">HOME</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/">Home Page</a></li>
                                    <li><a class="dropdown-item" href="/users/shop?sortBy=featured">Featured Products</a></li>
                                    <li><a class="dropdown-item" href="/users/shop?minPrice=5000&maxPrice=500000&sortBy=newArrivals">New Arrivals</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/shop">SHOP</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/users/shop?searchWord=monitor">MONITORS</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" data-bs-toggle="dropdown">PC COMPONENTS</a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Components</h6></li>
                                    <li><a class="dropdown-item" href="/users/shop?searchWord=motherboards">Motherboards</a></li>
                                    <li><a class="dropdown-item" href="/users/shop?searchWord=graphics+card">Graphics Cards</a></li>
                                </ul>
                            </li>
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#" data-bs-toggle="dropdown">GAMING PERIPHERALS</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/users/shop?searchWord=mouse">Gaming Mouse</a></li>
                                    <li><a class="dropdown-item" href="/users/shop?searchWord=keyboards">Gaming Keyboard</a></li>
                                    <li><a class="dropdown-item" href="/users/shop?searchWord=headset">Gaming Headset</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/about">ABOUT</a>
                            </li>
                        </ul>

                        <!-- Header Icons -->
                        <div class="header__icons d-flex align-items-center gap-3">
                            <% if(locals.user) { %>
                            <div class="dropdown">
                                <button class="btn nav-link text-white dropdown-toggle text-decoration-none border-0 p-0" type="button" data-bs-toggle="dropdown">
                                    <%= locals.user.name %> <i class="fas fa-caret-down"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/profile"><i class="fas fa-user-circle"></i> My Profile</a></li>
                                    <li><a class="dropdown-item" href="/profile/orders"><i class="fas fa-box"></i> My Orders</a></li>
                                    <li><a class="dropdown-item" href="/wishlist"><i class="fas fa-heart"></i> My Wishlist</a></li>
                                    <li><a class="dropdown-item" href="/wallet"><i class="fas fa-wallet"></i> My Wallet</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/logout" id="logoutLink"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </div>
                            <% } else { %>
                            <a href="/auth" class="nav-link">
                                <i class="fas fa-user"></i>
                            </a>
                            <% } %>
                            <a href="/wishlist" class="nav-link">
                                <i class="fas fa-heart"></i>
                            </a>
                            <a href="/cart" class="nav-link position-relative">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    <%= locals.cartCount %>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Sale Banner - Kept exactly as original -->
    <div class="sale-banner">
        <div class="sale-banner-content">
            <span class="orange-text">Republic Day</span>
            <span class="sale-text"> Sale </span>
            <span class="green-text">Starts Tomorrow</span>
            &nbsp;&nbsp;&nbsp;&nbsp;
        </div>
    </div>

    <!-- Search Form -->
    <div class="container-fluid py-2">
        <form action="/users/shop" method="get" class="d-flex justify-content-center">
            <div class="input-group" style="max-width: 400px;">
                <input type="text" name="searchWord" class="form-control" placeholder="Search...">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</header>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function toggleProfileMenu(event) {
            event.preventDefault();
            const menu = document.getElementById('profileDropdown');
            menu.classList.toggle('show-menu');
        }

        window.onclick = function (event) {
            if (!event.target.matches('.profile-btn') && !event.target.matches('.fa-user')) {
                const menu = document.getElementById('profileDropdown');
                if (menu.classList.contains('show-menu')) {
                    menu.classList.remove('show-menu');
                }
            }
        }

        //logout swal confirrmation
        document.getElementById("logoutLink").addEventListener("click", function (event) {
            event.preventDefault();

            Swal.fire({
                title: "Are you sure",
                text: `You will be logged out of your account
                            click yes to confirm`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Logout ",
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/logout';
                }
            })
        })
    </script>
</body>